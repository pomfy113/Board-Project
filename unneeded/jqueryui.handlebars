// Generator is the generator object
  $(".generator").draggable({
      grid: [ 100, 100 ],
      helper:'clone'
  });

// Board is where I want them to be
  $(".board").droppable({
      accept: ".generator",
      drop: function(event,ui){
          // Make the clone; stop it from being generator
          let new_signature = $(ui.helper).clone().removeClass('generator').addClass('clone');
          // Make new object a draggable
          new_signature.draggable({
              grid: [ 100, 100 ]
          });
          // Add to board
          $(this).append(new_signature);
      }
  });

