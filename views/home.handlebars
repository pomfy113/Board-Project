<!-- CHECK LATER - Polyfill Draggable -->
<div id="generators">
    <div id="generate-grid">
        <div>Rows: <input id="row"></div>
        <div>Columns: <input id="column"></div>
        <div>Height: <input id="height"></div>
        <button id="generate">Generate Grid</button>

    </div>
    <div id="generate-tokens">
      <div id="cube-generator" draggable="true" ondragstart="drag(event)" class="generator cube">
        <div class="face"></div>
        <div class="face"></div>
        <div class="face"></div>
        <div class="face"></div>
        <div class="face"></div>
        <div class="face"></div>
      </div>

      <div id="basic-token" draggable="true" ondragstart="drag(event)" class="generator token">
        <div class="face"></div>
        <div class="face"></div>
      </div>
    </div>
</div>
