<div id="container" ondrop="drop(event)" ondragover="allowDrop(event)">
<div id="controls">
    <div id="left-ctrl" class="sidebar">
        <div class="control">
            <button id="hide">Hide Generators</button>
            <div id="grid-visibility"></div>
        </div>
    </div>
    <div id="right-ctrl" class="sidebar">
        <!-- Translates -->
        <div class="control">
            <div class="row">
                <div class="ctrl-btn translate" id="mv-up">&#x2191;</div>
            </div>

            <div class="row">
                <div class="ctrl-btn translate" id="mv-left">&#x2190;</div>
                <div class="ctrl-btn translate" id="mv-right">&#x2192;</div>
            </div>
            <div class="ctrl-btn translate" id="mv-down">&#x2193;</div>
            </br>
        </div>
        <!-- Rotates -->
        <div class="control">
            <div class="ctrl-btn" id="rotate-down">Up</div>
            <div class="row">
                <div class="ctrl-btn" id="rotate-cw">&#x21BB;</div>
                <div class="ctrl-btn" id="rotate-ccw">&#x21BA;</div>
            </div>
            <div class="ctrl-btn" id="rotate-up">Down</div>
        </div>
        <div class="control">
            <div class="row nogap">
                <div class="ctrl-btn" id="zoom-in">Zoom-in</div>
                <div class="ctrl-btn" id="zoom-out">Zoom-out</div>
            </div>
            <div class="row nogap">
                <div class="ctrl-btn" id="spread-in">Spread</div>
                <div class="ctrl-btn" id="spread-out">Contract</div>
            </div>


        </div>

    </div>

</div>




